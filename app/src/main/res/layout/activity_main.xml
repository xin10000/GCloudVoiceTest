<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/etOPenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入openId,即个人id,默认:15625121914"
        android:text="15625121914" />  
    <EditText
        android:id="@+id/etRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="房间名，默认:mytest" />

    <Button
        android:id="@+id/btnInit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="初始化" />

    <Button
        android:id="@+id/btnJoinTeamRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="加入mytest房间" />

    <Button
        android:id="@+id/btnOpenMic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="打开麦克风" />

    <Button
        android:id="@+id/btnOpenSpeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="打开扬声器" />

    <Button
        android:id="@+id/btnPoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="Poll" />

    <Button
        android:id="@+id/btnCloseMic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="Close麦克风" />

    <Button
        android:id="@+id/btnCloseSpeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="Close扬声器" /> 
    
    <Button
        android:id="@+id/btnQuitRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClick"
        android:text="退出房间" />
</LinearLayout>
